<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/height_item"
    android:background="@drawable/recycler_item_border"
    android:orientation="vertical"
    android:paddingLeft="@dimen/eventsImage_padding_left_right"
    android:paddingTop="@dimen/eventsImage_padding_top_bottom"
    android:paddingRight="@dimen/eventsImage_padding_left_right"
    android:paddingBottom="@dimen/eventsImage_padding_top_bottom">

    <TextView
        android:id="@+id/textNoticeContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:text="@string/sample_text"
        android:textSize="@dimen/size_title" />


    <TextView
        android:id="@+id/textNoticeDate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:text="@string/sample_date" />

</LinearLayout>