<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingHorizontal="20dp">

    <ImageView
        android:id="@+id/imageCircle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/img_indicator"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textOrderTime" />

    <TextView
        android:id="@+id/textOrderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="주문일시"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textOrderCafeMenu"
        app:layout_constraintStart_toEndOf="@id/imageCircle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textOrderCafeMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="메뉴 외 n개"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/textOrderTime"
        app:layout_constraintTop_toBottomOf="@+id/textOrderTime" />

    <ImageView
        android:id="@+id/imageState"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/img_indicator"
        android:backgroundTint="@color/lightgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_receive_order"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/imageState"
        app:layout_constraintEnd_toEndOf="@id/imageState"
        app:layout_constraintStart_toStartOf="@id/imageState"
        app:layout_constraintTop_toTopOf="@id/imageState" />

</androidx.constraintlayout.widget.ConstraintLayout>