<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderedStatusActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="1dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeNoActionBar"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bold"
                android:text="@string/title_ordered_status"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    android:paddingHorizontal="35dp">

    <TextView
        android:id="@+id/status1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_circle_gray"
        android:backgroundTint="#C6C2C2"
        android:gravity="center_vertical"
        android:text="@string/order_standby"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/status2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_circle_gray"
        android:backgroundTint="#C6C2C2"
        android:gravity="center_vertical"
        android:text="@string/order_receipt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/status3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_circle_gray"
        android:backgroundTint="#C6C2C2"
        android:gravity="center_vertical"
        android:text="@string/order_wait"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/status4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_circle_gray"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center_vertical"
        android:text="@string/order_cplt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp" />

</LinearLayout>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/msg_cplt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="23dp" />

    <TextView
            android:id="@+id/date_text"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문일시 : 2021/04/04 14:30"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray"
            android:textSize="16dp" /> "/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#E8E8E8" />




</LinearLayout>