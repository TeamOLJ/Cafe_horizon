<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:background="@drawable/recycler_item_border"
    android:paddingHorizontal="20dp">

    <ImageView
        android:id="@+id/imageCouponState"
        android:layout_width="@dimen/size_order_state_imageview"
        android:layout_height="@dimen/size_order_state_imageview"
        android:background="@drawable/img_indicator"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCouponState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용상태"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/imageCouponState"
        app:layout_constraintEnd_toEndOf="@id/imageCouponState"
        app:layout_constraintStart_toStartOf="@id/imageCouponState"
        app:layout_constraintTop_toTopOf="@id/imageCouponState" />

    <TextView
        android:id="@+id/textCouponName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="쿠폰 이름"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textCouponDate"
        app:layout_constraintStart_toEndOf="@id/imageCouponState"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textCouponDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_date"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/textCouponName"
        app:layout_constraintTop_toBottomOf="@+id/textCouponName" />
</androidx.constraintlayout.widget.ConstraintLayout>