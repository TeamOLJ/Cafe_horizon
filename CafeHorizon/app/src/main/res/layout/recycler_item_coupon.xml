<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_item_border"
    android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/textCouponState"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/rounded_textview"
        android:backgroundTint="@color/semigray"
        android:gravity="center"
        android:text="사용상태"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:fontFamily="@font/bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCouponName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/bold"
        android:text="쿠폰 이름"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textCouponDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textCouponState"
        app:layout_constraintTop_toTopOf="@+id/textCouponState" />

    <TextView
        android:id="@+id/textCouponDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_date"
        android:textSize="16dp"
        android:textColor="@color/gray"
        android:fontFamily="@font/light"
        app:layout_constraintBottom_toBottomOf="@+id/textCouponState"
        app:layout_constraintStart_toStartOf="@id/textCouponName"
        app:layout_constraintTop_toBottomOf="@+id/textCouponName" />

</androidx.constraintlayout.widget.ConstraintLayout>